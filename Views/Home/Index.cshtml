@model GestionInterventions.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard - Gestion des Interventions";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6 mb-0">📋 Dashboard</h1>
            <p class="text-muted">Vue d'ensemble de vos interventions</p>
        </div>
    </div>

    <!-- Section Statistiques -->
    <div class="row mb-5">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-0">@Model.TotalInterventions</h4>
                        <p class="card-text mb-0">Total</p>
                    </div>
                    <div class="fs-1">📋</div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-0">@Model.InterventionsEnCours</h4>
                        <p class="card-text mb-0">En cours</p>
                    </div>
                    <div class="fs-1">🔄</div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-0">@Model.InterventionsTerminees</h4>
                        <p class="card-text mb-0">Terminées (@Model.PourcentageTerminees%)</p>
                    </div>
                    <div class="fs-1">✅</div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h4 class="card-title mb-0">@Model.InterventionsUrgentes</h4>
                        <p class="card-text mb-0">Urgentes</p>
                    </div>
                    <div class="fs-1">🚨</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Interventions Urgentes -->
    @if (Model.ADesInterventionsUrgentes)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">🚨 Interventions Urgentes & Prioritaires</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var intervention in Model.InterventionsUrgentesNonTerminees)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card border-start border-4 @(intervention.Priorite == GestionInterventions.Models.Entities.PrioriteIntervention.Urgent ? "border-danger" : "border-warning")">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title mb-0">@intervention.Titre</h6>
                                                <span class="badge @(intervention.Priorite == GestionInterventions.Models.Entities.PrioriteIntervention.Urgent ? "bg-danger" : "bg-warning")">
                                                    @intervention.Priorite
                                                </span>
                                            </div>
                                            <p class="card-text text-muted small">
                                                @(intervention.Description?.Length > 80 ? intervention.Description.Substring(0, 80) + "..." : intervention.Description)
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    @intervention.DateCreation.ToString("dd/MM/yyyy")
                                                </small>
                                                <span class="badge @(intervention.Statut == GestionInterventions.Models.Entities.StatutIntervention.Nouveau ? "bg-info" : "bg-warning")">
                                                    @intervention.Statut
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Intervention")" class="btn btn-outline-primary">
                                Voir toutes les interventions →
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body text-center py-5">
                        <h4 class="text-muted">🎉 Aucune intervention urgente</h4>
                        <p class="text-muted">Toutes les interventions prioritaires sont sous contrôle !</p>
                        <a href="@Url.Action("Index", "Intervention")" class="btn btn-outline-primary">
                            Voir toutes les interventions →
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>