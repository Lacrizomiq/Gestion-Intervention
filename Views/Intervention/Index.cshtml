@model List<GestionInterventions.Models.Entities.Intervention>
@{
  ViewData["Title"] = "Interventions";
}

<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-6 mb-0">üìã Interventions</h1>
    </div>

    <!-- Bouton pour ajouter une intervention -->
    <div class="col-12 d-flex justify-content-end">
      <a asp-action="Create" class="btn btn-primary">Ajouter une intervention</a>
    </div>
  </div>

  <!-- Section formulaire de recherche -->
  <div class="row mb-4">
    <div class="col-12">
      <form asp-action="Index" method="get" class="row g-3">
        <div class="col-md-3">
          <input type="text" class="form-control" name="searchText" placeholder="Rechercher dans titre ou description" value="@ViewBag.SearchText">
        </div>
        <div class="col-md-3">
          <select class="form-select" name="statut">
            <option value="">Tous les statuts</option>
            @foreach(var statut in Enum.GetValues(typeof(GestionInterventions.Models.Entities.StatutIntervention)))
            {
              <option value="@statut" selected="@(statut.ToString() == ViewBag.SelectedStatut?.ToString())">@statut</option>
            }
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select" name="priorite">
            <option value="">Toutes les priorit√©s</option>
            @foreach(var priorite in Enum.GetValues(typeof(GestionInterventions.Models.Entities.PrioriteIntervention)))
            {
              <option value="@priorite" selected="@(priorite.ToString() == ViewBag.SelectedPriorite?.ToString())">@priorite</option>
            }
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select" name="dateCreation">
            <option value="">Toutes les dates</option>
            <option value="asc" selected="@(ViewBag.SelectedDateCreation == "asc")">Du plus ancien au plus r√©cent</option>
            <option value="desc" selected="@(ViewBag.SelectedDateCreation == "desc")">Du plus r√©cent au plus ancien</option>
          </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
          <button type="submit" class="btn btn-primary me-2">Rechercher</button>
          <a href="@Url.Action("Index")" class="btn btn-outline-secondary">R√©initialiser</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Section liste des interventions -->
  <div class="row">
    <div class="col-12">
      <!-- En tete avec compteurs-->
      <div class="d-flex justify-content-between align-items-center">
        <h5>R√©sultats (@Model.Count interventions)</h5>
      </div>

      <!-- Tableau responsive-->
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Titre</th>
              <th>Description</th>
              <th>Priorit√©</th>
              <th>Statut</th>
              <th>Date de cr√©ation</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            @if (Model.Any())
            {
              @foreach (var intervention in Model)
              {
                <tr>
                  <!-- Titre -->
                  <td>
                    <strong>@intervention.Titre</strong>
                  </td>
                  <!-- Description tronqu√©e-->
                  <td>
                    @(intervention.Description?.Length > 60 ? intervention.Description.Substring(0, 60) + "..." : intervention.Description)
                  </td>
                  <!-- Priorit√© avec badge color√©-->
                  <td>
                  <span class="badge @(intervention.Priorite == GestionInterventions.Models.Entities.PrioriteIntervention.Urgent ? "bg-danger" : 
                                        intervention.Priorite == GestionInterventions.Models.Entities.PrioriteIntervention.Haute ? "bg-warning" :
                                        intervention.Priorite == GestionInterventions.Models.Entities.PrioriteIntervention.Normale ? "bg-primary" : "bg-secondary")">
                    @intervention.Priorite
                  </span>
                </td>

                <!-- Statut avec badge color√© -->
                <td>
                  <span class="badge @(intervention.Statut == GestionInterventions.Models.Entities.StatutIntervention.Terminee ? "bg-success" :
                                        intervention.Statut == GestionInterventions.Models.Entities.StatutIntervention.EnCours ? "bg-warning" :
                                        intervention.Statut == GestionInterventions.Models.Entities.StatutIntervention.Nouveau ? "bg-info" : "bg-secondary")">
                    @intervention.Statut
                  </span>
                </td>

                <!-- Date format√©e -->
                <td>
                  @intervention.DateCreation.ToString("dd/MM/yyyy")
                </td>

                <!-- Actions-->
                <td>
                  <a asp-action="Details" asp-route-id="@intervention.Id" class="btn btn-sm btn-outline-primary">
                    Voir d√©tails
                  </a>
                </td>
              </tr>
              }
            } 
            else
            {
              <tr>
                <td colspan="6" class="text-center text-muted py-4">
                  <em>Aucune intervention trouv√©e</em>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
